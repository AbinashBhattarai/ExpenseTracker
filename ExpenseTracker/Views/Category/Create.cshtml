@model CreateCategoryViewModel

<div class="pt-3">
    <h4 class="fw-bold">Add New Category</h4>
    <p class="text-black-50">
        <i class="bi bi-house-fill"></i>
        <i class="bi bi-chevron-right"></i>
        <a asp-controller="Category" asp-action="Index" class="text-black-50">Category</a>
        <i class="bi bi-chevron-right"></i>
        <a asp-controller="Category" asp-action="Create" class="text-black-50">Add</a>
    </p>

    <div class="pt-4 d-flex flex-wrap justify-content-center align-items-center gap-5">
        <div class="p-3 rounded" style="max-width:30rem;background-color:lightblue">
            <image src="/images/category.png" class="rounded mx-2" style="width:100%;height:auto;" />
        </div>
        <form method="post" asp-controller="Category" asp-action="Create" class="py-3 px-5 rounded shadow" style="background-color:aliceblue;width:30rem;">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" class="form-control text-capitalize" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger fw-normal"></span>
            </div>
            <div class="pt-3">
                <button type="submit" class="btn btn-success w-100">Submit</button>
            </div>
        </form>
    </div>
</div>