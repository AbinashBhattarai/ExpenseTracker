@model IEnumerable<Category>

<div class="pt-3 overflow-auto">
    <div class="d-sm-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold">Category</h4>
            <p class="text-black-50">
                <i class="bi bi-house-fill"></i>
                <i class="bi bi-chevron-right"></i>
                <a asp-controller="Category" asp-action="Index" class="text-black-50">Category</a>
            </p>
        </div>
        <div class="text-center border rounded d-flex justify-content-center align-items-center px-4 gap-2">
            <i class="bi bi-plus text-primary fw-bold" style="font-size:1.5rem;"></i>
            <a asp-controller="Category" asp-action="Create" class="text-decoration-none">Add Category</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="rounded-3 overflow-hidden rounded" style="min-width:22rem;background-color:aliceblue;">
            <table id="transaction" class="table table-borderless text-center border-bottom mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Category Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="text-capitalize">@category.Name</td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-success btn-sm" style="width:5rem;">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" style="width:5.2rem;" onclick="displayConfirm(@category.Id)">
                                    <i class="bi bi-trash" ></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex flex-wrap justify-content-center gap-3 justify-content-md-between ps-3 pe-5 pt-2 align-items-baseline">
                <ul class="pagination mb-0">
                    <li class="page-item">
                        <a class="page-link py-1" href="#" style="background-color:aliceblue;">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link active py-1" href="#">1</a></li>
                    <li class="page-item">
                        <a class="page-link py-1" href="#" style="background-color:aliceblue;">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
                <p class="text-black-50">Page 1 of 1</p>
            </div>
        </div>
    }
    else
    {
        <p class="text-center text-danger fw-bold fs-5">You have not added any Category yet!!!</p>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        function displayConfirm(id) {
            console.log(id);
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'DELETE',
                        url: '/Category/Delete?id=' + id,
                        success: function (result) {
                            if (result.success == true) {
                                toastr.success(result.message, 'Alert')
                                window.setTimeout(function () {
                                    location.reload();
                                }, 1000);
                            }
                            else {
                                toastr.error(result.message, 'Alert')
                            }
                        }
                    });
                }
            });
        }
    </script>
}
