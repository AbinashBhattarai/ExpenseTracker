@inject SignInManager<AppUser> signInManager;


@if (signInManager.IsSignedIn(User))
{
    <div class="nav-item dropdown">
        <div class="d-flex flex-wrap align-items-center justify-content-md-center gap-2" data-bs-toggle="dropdown" aria-expanded="false">
            @User.Identity!.Name
            <span class="text-white d-flex justify-content-center align-items-center" style="height:1.2rem;width:1.2rem;border-radius:50%;background-color:gray;cursor:pointer">
                <i class="bi bi-chevron-down" style="font-size:1rem;"></i>
            </span>
        </div>
        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
            <li>
                <a class="dropdown-item w-100 text-center" asp-Controller="Transaction" asp-action="Index">My Transaction</a>
            </li>
            <li>
                <a class="dropdown-item w-100 text-center" asp-Controller="Category" asp-action="Index">My Category</a>
            </li>
            <li>
                <form method="post" asp-controller="Account" asp-action="Logout" class="dropdown-item" href="#">
                    <button type="submit" class="w-100">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white text-end" asp-area="" asp-controller="Account" asp-action="Login">
            <i class="bi bi-person-circle pe-1"></i>
            Login
        </a>
    </li>
}