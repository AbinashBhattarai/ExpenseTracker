@model LoginViewModel

<div class="d-flex justify-content-center align-items-center">
    <form class="mt-5 bg-white p-3 rounded border shadow" style="width:30rem;" method="post" asp-controller="Account" asp-action="Login">
        <p class="text-center fs-3 fw-bold">Login</p>
        <div asp-validation-summary="ModelOnly" class="text-danger validation"></div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input type="text" class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label fw-bold"></label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe"></label>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>

        <p class="mt-3 mb-0"><a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a></p>
        <p class="mt-3 mb-0">Don't have account?<a asp-controller="Account" asp-action="Register" class="ms-2 text-danger text-decoration-none">Register here</a></p>

        <div class="d-flex align-items-center mt-3 text-black">
            <hr class="flex-grow-1 text-primary" />
            <span class="px-2 text-warning">Or Signup With</span>
            <hr class="flex-grow-1 text-primary" />
        </div>

        <div class="mt-3 mb-2 d-flex justify-content-center gap-5">
            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="@Model.ExternalLogins[0].Name" class="border border-danger d-flex justify-content-center align-items-center shadow" title="Signup with google" style="width:3rem;height:3rem;border-radius:50%;cursor:pointer;">
                <i class="bi bi-google fs-2 text-danger"></i>
            </a>
            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="@Model.ExternalLogins[1].Name" class="border border-primary d-flex justify-content-center align-items-center shadow" title="Signup with facebook" style="width:3rem;height:3rem;border-radius:50%;cursor:pointer;">
                <i class="bi bi-facebook fs-2 text-primary"></i>
            </a>
        </div>
    </form>
</div>