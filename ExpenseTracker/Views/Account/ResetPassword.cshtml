@model ResetPasswordViewModel


<div class="d-flex justify-content-center align-items-center">
    <form class="mt-5 bg-white p-3 rounded border shadow" style="width:40rem;" method="post" asp-controller="Account" asp-action="ResetPassword">
        <p class="text-center fs-3 fw-bold">Reset Password</p>
        <div class="text-danger validation" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Email">
        <input type="hidden" asp-for="Token" >
        <div class="mb-3">
            <label asp-for="Password" class="form-label fw-bold"></label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger w-100">Reset Password</button>
    </form>
</div>