@using ExpenseTracker.Enum
@model Transaction


<div class="pt-3">
    <h4>View Transaction</h4>
    <p class="text-black-50">
        <i class="bi bi-house-fill"></i>
        <i class="bi bi-chevron-right"></i>
        <a asp-controller="Transaction" asp-action="Index" class="text-black-50">Transaction</a>
        <i class="bi bi-chevron-right"></i>
        <a asp-controller="Transaction" asp-action="View" asp-route-id="@Model.Id" class="text-black-50">View</a>
    </p>

    <div class="pt-2 d-flex flex-wrap justify-content-center align-items-center gap-5">
        <div class="p-3 rounded" style="width:30rem;background-color:lightblue">
            <image src="/images/transaction.png" class="rounded mx-2" style="width:100%;height:auto;" />
        </div>
        <div class="py-3 px-5 rounded shadow" style="background-color:aliceblue;width:30rem;">
            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input disabled type="datetime" class="form-control" asp-for="Date" value="@Model.Date.ToLongDateString()">
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <input disabled class="form-control" asp-for="Type">
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input disabled class="form-control" asp-for="Category!.Name">
            </div>
            <div class="mb-3">
                <label asp-for="Note" class="form-label"></label>
                <textarea disabled class="form-control" asp-for="Note"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for=Amount class="form-label"></label>
                <input disabled class="form-control" asp-for="Amount">
            </div>
            <div class="pt-3">
                <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success w-100">
                    <i class="bi bi-pencil-square"></i>
                    Edit
                </a>
            </div>
        </div>
    </div>
</div>